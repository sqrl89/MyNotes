<resources>
    <style name="Theme.NewNotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/main_primary</item>
        <item name="colorPrimaryVariant">@color/main_theme</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/main_theme</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="DatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/main_primary</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerDialogButton</item>
    </style>

    <style name="DatePickerDialogButton" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/main_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>